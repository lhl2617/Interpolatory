{
  "name": "interpolatory-simulator",
  "version": "1.0.1",
  "description": "Video frame-rate interpolation framework for software simulation and benchmarking",
  "main": "./dist/main.js",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "prestart": "npm run build",
    "start": "electron .",
    "lint": "eslint --ext=jsx,js,tsx,ts src",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{json,css,scss,md}": [
      "prettier --config ./.prettierrc --write"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "prettier --config ./.prettierrc --write",
      "eslint --ext=jsx,js,ts,tsx --fix src"
    ]
  },
  "build": {
    "productName": "Interpolatory Simulator",
    "appId": "interpolatory.simulator",
    "icon": "assets/icon/icon.ico",
    "mac": {
      "category": "video.interpolation.simulator"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      {
        "from": "../python/",
        "to": "python",
        "filter": [
          "**/*.md",
          "**/*.txt",
          "*.py",
          "src/**/*.py",
          "benchmarks/**/*"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lhl2617/Interpolatory"
  },
  "author": {
    "name": "Interpolatory",
    "email": "lhl2617@ic.ac.uk"
  },
  "license": "SEE LICENSE",
  "bugs": {
    "url": "https://github.com/lhl2617/Interpolatory"
  },
  "homepage": "https://github.com/lhl2617/Interpolatory",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@hot-loader/react-dom": "^16.13.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/md5": "^2.2.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.8.1",
    "@types/webdriverio": "^5.0.0",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "electron": "^8.5.2",
    "electron-builder": "^22.6.0",
    "electron-devtools-installer": "^3.0.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "image-webpack-loader": "^6.0.0",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "react-test-renderer": "^16.13.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "spectron": "^10.0.1",
    "style-loader": "^1.2.1",
    "typescript": "^3.9.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@types/command-exists": "^1.2.0",
    "antd": "^4.2.2",
    "command-exists": "^1.2.9",
    "md5": "^2.2.1",
    "minimist": "^1.2.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
